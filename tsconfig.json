{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "storybook"],
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "theme/*": ["./theme/*"],
      "forms/*": ["./forms/*"],
      "widgets/*": ["./widgets/*"],
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "storybook/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "storybook",
    "src/internal",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}