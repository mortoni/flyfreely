{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    // "rootDirs": ["src", "pamonha-storybook"],
    "rootDirs": ["src"],
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true
  },
  // "include": ["src/**/*", "pamonha-storybook/**/*"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    // "pamonha-storybook",
    "src/internal",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}